<resources>

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and secondary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#6CAA78</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.MyApp.Button</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="backgroundTint">@color/greenButtonColor</item>
    </style>



    <!-- Custom text appearance for header text -->
    <style name="TextAppearance.MyApp.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/headerTextColor</item>
    </style>

</resources>